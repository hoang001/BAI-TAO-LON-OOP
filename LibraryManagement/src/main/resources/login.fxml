<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" prefHeight="300.0" prefWidth="666.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.LoginView">
   <children>
      <GridPane alignment="CENTER" prefHeight="102.0" prefWidth="666.0" GridPane.rowIndex="2">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="51.0" minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="67.0" minHeight="10.0" prefHeight="67.0" valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="lStatus" textFill="#a81212">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
               <children>
            <!-- Button Đăng nhập -->
                     <Button fx:id="bLogin" text="OK" onAction="#onLoginButtonClick" GridPane.rowIndex="2" GridPane.columnSpan="2" prefWidth="150.0" styleClass="bLogin">
                           <font>
                              <Font size="24.0" />
                           </font>
                        <GridPane.margin>
                           <Insets top="20.0" bottom="10.0" />
                        </GridPane.margin>
                     </Button>

            <!-- Button Hủy -->
                     <Button fx:id="bCancel" text="HỦY" onAction="#onCancelButtonClick" GridPane.rowIndex="3" GridPane.columnSpan="2" prefWidth="150.0" styleClass="bCancel">
                           <font>
                              <Font size="24.0" />
                           </font>
                        <GridPane.margin>
                           <Insets top="10.0" bottom="10.0" />
                        </GridPane.margin>
                     </Button>
               </children>
            </HBox>
         </children>
      </GridPane>
      <GridPane alignment="CENTER" prefHeight="78.0" prefWidth="541.0" GridPane.rowIndex="1">
         <children>
            <Label text="Tên đăng nhập">
               <font>
                  <Font size="24.0" />
               </font>
               <GridPane.margin>
                  <Insets left="30.0" right="10.0" />
               </GridPane.margin>
            </Label>
            <Label text="Mật khẩu" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
               <GridPane.margin>
                  <Insets left="30.0" right="10.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="tFUsername" prefHeight="36.0" prefWidth="357.0" promptText="Nhập tên đăng nhập" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets left="10.0" right="30.0" />
               </GridPane.margin>
               <font>
                  <Font size="24.0" />
               </font></TextField>
            <PasswordField fx:id="tFPassword" prefHeight="36.0" prefWidth="357.0" promptText="Nhập mật khẩu" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="10.0" right="30.0" />
               </GridPane.margin>
               <font>
                  <Font size="24.0" />
               </font></PasswordField>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="337.0" minWidth="10.0" prefWidth="208.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="465.0" minWidth="10.0" prefWidth="458.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="61.0" minHeight="10.0" prefHeight="47.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="53.0" minHeight="10.0" prefHeight="53.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
      <HBox alignment="CENTER" prefHeight="148.0" prefWidth="666.0">
         <children>
            <Label prefHeight="53.0" prefWidth="500.0" text="              ĐĂNG NHẬP" textAlignment="RIGHT" textFill="#004d1c" textOverrun="CLIP">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="154.0" minHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="206.0" minHeight="10.0" prefHeight="113.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="107.0" minHeight="10.0" prefHeight="106.0" vgrow="SOMETIMES" />
   </rowConstraints>
</GridPane>
